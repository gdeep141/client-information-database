<!DOCTYPE html>
<html lang="en">
<head>
    <%= include head.html %>
    <title>Proposals</title>
</head>
<body>
    <%= include navbar.html %>

    <div class="container">
        <br><h1>Proposals</h1><br>
        <form action="">
            <div class="form-group">
                <label for="proposal-ref">Proposal Ref:</label>
                <div class="row">
                    <div class="col-10">
                        <select class="form-control" id="proposal-ref"></select>
                    </div>
                    <div class="col-2">
                        <button type=button class="btn" id="create-proposal-ref">Add</button>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="proposal-name">Proposal Name:</label>
                <div class="row">
                    <div class="col-10">
                        <input type=text class="form-control" id="proposal-name" required>
                    </div>
                    <div class="col-2"></div>
                </div>
            </div>
            <div class="form-group">
                <label for="customer">Customer:</label>
                <div class="row">
                    <div class="col-10">
                        <select class="form-control" id="customer"></select>
                    </div>
                    <div class="col-2"></div>
                </div>
            </div>
            <div class="form-group">
                <label for="proposal-type">Proposal Type:</label>
                <div class="row">
                    <div class="col-10">
                        <select class="form-control" id="proposal-type">
                            <option value="pre-discovery">Pre Discovery</option>
                            <option value="delivery">Delivery</option>
                            <option value="resource-augmentation">Resource Augmentation</option>
                            <option value="live">Live</option>
                        </select>
                    </div>
                    <div class="col-2"></div>
                </div>
            </div>
            <div class="form-group">
                <label for="value">Value (Â£):</label>
                <div class="row">
                    <div class="col-10">
                        <input type=number class="form-control" id="value" required>
                    </div>
                    <div class="col-2"></div>
                </div>
            </div>
            <div class="form-group">
                <label for="issued-date">Issued Date:</label>
                <div class="row">
                    <div class="col-10">
                        <input type=date class="form-control" id="issued-date" required>
                    </div>
                    <div class="col-2"></div>
                </div>
            </div>
            <div class="form-group">
                <label for="approval-date">Approval Date:</label>
                <div class="row">
                    <div class="col-10">
                        <input type=date class="form-control" id="approval-date" required>
                    </div>
                    <div class="col-2"></div>
                </div>
            </div>
            <div class="form-group">
                <label for="funding-type">Funding Type:</label>
                <div class="row">   
                    <div class="col-10">
                        <select class="form-control" id="funding-type">
                            <option value="tandm">T&M</option>
                            <option value="fixed">Fixed</option>
                        </select>
                    </div>
                    <div class="col-2"></div>
                </div>
            </div>
            <div class="form-group">
                <label for="licenses-included">Licenses Included:</label>
                <div class="row">   
                    <div class="col-10">
                        <select class="form-control" id="licenses-included">
                            <option value="yes">Yes</option>
                            <option value="no">No</option>
                        </select>
                    </div>
                    <div class="col-2"></div>
                </div>
            </div>
            <div class="form-group">
                <label for="work-completed-date">Work Completed Date:</label>
                <div class="row">   
                    <div class="col-10">
                        <input type="date" class="form-control" id="work-completed-date">
                    </div>
                    <div class="col-2"></div>
                </div>
            </div>
            <div class="form-group">
                <label for="level-3-days">SFIA Level 3 Budget Days:</label>
                <div class="row">
                    <div class="col-10">
                        <input type=number class="form-control" id="level-3-days" required>
                    </div>
                    <div class="col-2"></div>
                </div>  
            </div>
            <div class="form-group">
                <label for="level-4-days">SFIA Level 4 Budget Days:</label>
                <div class="row">
                    <div class="col-10">
                        <input type=number class="form-control" id="level-4-days" required>
                    </div>
                    <div class="col-2"></div>
                </div>  
            </div>
            <div class="form-group">
                <label for="level-5-days">SFIA Level 5 Budget Days:</label>
                <div class="row">
                    <div class="col-10">
                        <input type=number class="form-control" id="level-5-days" required>
                    </div>
                    <div class="col-2"></div>
                </div>  
            </div>
            <div class="form-group">
                <label for="level-6-days">SFIA Level 6 Budget Days:</label>
                <div class="row">
                    <div class="col-10">
                        <input type=number class="form-control" id="level-6-days" required>
                    </div>
                    <div class="col-2"></div>
                </div>  
            </div>
            <div class="form-group">
                <label for="expenses">Expenses:</label>
                <div class="row">
                    <div class="col-10">
                        <input type=number class="form-control" id="expenses" required>
                    </div>
                    <div class="col-2"></div>
                </div>  
            </div>
            <div class="form-group">
                <label for="project-code">Project Code:</label>
                <div class="row">
                    <div class="col-10">
                        <input type=number class="form-control" id="project-code" required>
                    </div>
                    <div class="col-2"></div>
                </div>  
            </div>
        </form>
    </div>
</body>
</html>